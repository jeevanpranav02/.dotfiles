general {
        colors = true
        color_good = "#a3be8c"
        color_bad = "#bf616a"
        color_degraded = "#ebcb8b"
}

order += "memory"
order += "load"
order += "disk /"
order += "battery all"
order += "tztime local"
order += "volume master"

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = ":) FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

load {
        format = "%1min"
}

memory {
        format = "Using %used"
        threshold_degraded = "20%"
        format_degraded = "Left: %free"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}


