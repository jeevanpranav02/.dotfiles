XTerm.termName: xterm-256color

! Set xterm window size
XTerm*VT100.geometry: 80x24

! Set font and fontsize
XTerm*faceName: DejaVu Sans Mono Regular
XTerm*faceSize: 14

! VT Font Menu: Unreadable
XTerm*faceSize1: 8
! VT Font Menu: Tiny
XTerm*faceSize2: 10
! VT Font Menu: Small
XTerm*faceSize3: 12
! VT Font Menu: Medium
XTerm*faceSize4: 16
! VT Font Menu: Large
XTerm*faceSize5: 22
! VT Font Menu: Huge
XTerm*faceSize6: 24

! Scrollbar
XTerm*vt100.scrollBar: false

! Do not scroll when there is new input
XTerm*scrollTtyOutput: false

! Lines of output you can scroll back over
XTerm*saveLines: 15000

! Enable copy/paste hotkeys (mouse highlight = copy, shift+Insert = paste)
XTerm*selectToClipboard: true

! Select text
XTerm*highlightSelection: true
! Remove trailing spaces
XTerm*trimSelection: true

! Keybindings
XTerm*vt100.translations: #override \n\
  Ctrl <Key>-: smaller-vt-font() \n\
  Ctrl <Key>+: larger-vt-font() \n\
  Ctrl <Key>0: set-vt-font(d) \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

! Color Themes based on natural colors
XTerm*title: XTerminal
XTerm*background: #1C1C1C
XTerm*foreground: #DADADA

! black
XTerm*color0  : #000000
XTerm*color8  : #808080

! red
XTerm*color1  : #800000
XTerm*color9  : #FF0000

! green
XTerm*color2  : #008000
XTerm*color10 : #00FF00

! yellow
XTerm*color3  : #808000
XTerm*color11 : #FFFF00

! blue
XTerm*color4  : #000080
XTerm*color12 : #0000FF

! magenta
XTerm*color5  : #800080
XTerm*color13 : #FF00FF

! cyan
XTerm*color6  : #008080
XTerm*color14 : #00FFFF

! white
XTerm*color7  : #C0C0C0
XTerm*color15 : #FFFFFF

