# XDG
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

# editor
export EDITOR="nvim"
export VISUAL="nvim"

# Add Go binary
export PATH=$PATH:$HOME/go/bin

# Add local bin
export PATH="$HOME/.local/bin:$PATH"

# FZF Env
export FZF_DEFAULT_OPTS=' --preview "batcat --color=always --decorations=never {}"'

# Aliases
alias anime='cd ~/Videos/Anime'
alias movies='cd ~/Videos/Movies'
alias postgre='sudo -i -u postgres'
alias ta='tmux attach'
alias tk='tmux kill-server'
alias weather='curl wttr.in'
alias kittyupdate='curl -L https://sw.kovidgoyal.net/kitty/installer.sh | sh /dev/stdin'
# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias las='ls -tarl'
alias doom='~/.config/emacs/bin/doom'
alias diskusage='sudo du --summarize --human-readable * | sort --human-numeric-sort --reverse'
# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Git Aliases
alias gitlog='git log --graph --oneline --decorate --all'
alias gitfzf='git log --oneline | fzf --multi --preview "git show {+1} | batcat --color=always --decorations=never"'


# For flutter autocompletion
source ~/.bash_completion/flutter
